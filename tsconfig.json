{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["types/env.d.ts", "src/**/*", "src/**/*.vue", "types/*.d.ts"],
  "types": ["element-plus/global"],
  "typeRoots": ["./node_modules/@types/", "./types"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
